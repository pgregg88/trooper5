{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "allowJs": true,
    "noImplicitAny": false
  },
  "include": [
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
